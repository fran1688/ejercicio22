<p id="notice"><%= notice %></p>

<h1>Students</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><button type="submit" class="btn btn-primary"><%= link_to 'Show', student %></button></td>
        <td><button type="submit" class="btn btn-success"><%= link_to 'Edit', edit_student_path(student) %></button></td>
        <td><button type="submit" class="btn btn-danger"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

